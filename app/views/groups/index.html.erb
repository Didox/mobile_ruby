<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for group in @groups %>
  <tr>
    <td><%=h group.name %></td>
    <td><%= link_to 'Show', group, :class => "show" %></td>
    <td><%= link_to 'Edit', edit_group_path(group), :class => "edit" %></td>
    <td><%= link_to 'Add Pages', add_pages_group_path(group), :class => "pages" %></td>
    <td><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete, :class => "delete" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New group', new_group_path %>
